<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle_background"
        android:padding="4dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liên hệ hỗ trợ"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Central Icon -->
    <ImageView
        android:id="@+id/contactIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_support"
        android:contentDescription="Support Icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/circle_background"
        android:padding="16dp"
        android:elevation="4dp" />

    <!-- Contact Info Card -->
    <LinearLayout
        android:id="@+id/contactInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactIcon"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:elevation="6dp"
        android:padding="16dp">

        <!-- Phone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_phone"
                android:contentDescription="Phone Icon" />

            <TextView
                android:id="@+id/contactPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="090xxxxxxx"
                android:textSize="25sp"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_email"
                android:contentDescription="Email Icon" />

            <TextView
                android:id="@+id/contactEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RoadWatcher@gmail.com"
                android:textSize="20sp"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Facebook -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_facebook"
                android:contentDescription="Facebook Icon" />

            <TextView
                android:id="@+id/contactFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Road Watcher"
                android:textSize="25sp"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Motivational Message -->
    <TextView
        android:id="@+id/motivationalMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Together, we make roads safer!"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@id/contactInfoCard" />

    <!-- Quick Access Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/motivationalMessage"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/feedbackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:layout_marginEnd="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/reportIssueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Báo lỗi"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:padding="12dp" />
    </LinearLayout>

</RelativeLayout>

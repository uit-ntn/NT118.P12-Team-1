<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SupportContactActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        android:padding="8dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liên hệ hỗ trợ"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Icon -->
    <ImageView
        android:id="@+id/contactIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_support"
        android:contentDescription="Support Icon"
        android:paddingBottom="16dp" />

    <!-- Contact Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khi bạn cần giúp đỡ, xin vui lòng liên hệ:"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Phone Number -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SĐT:"
        android:textStyle="bold"
        android:paddingStart="16dp" />

    <TextView
        android:id="@+id/contactPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="090xxxxxxx"
        android:textColor="@color/red"
        android:paddingStart="32dp"
        android:paddingBottom="8dp" />

    <!-- Email -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textStyle="bold"
        android:paddingStart="16dp" />

    <TextView
        android:id="@+id/contactEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RoadWatcher@gmail.com"
        android:textColor="@color/red"
        android:paddingStart="32dp"
        android:paddingBottom="8dp" />

    <!-- Facebook -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook:"
        android:textStyle="bold"
        android:paddingStart="16dp" />

    <TextView
        android:id="@+id/contactFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Road Watcher"
        android:textColor="@color/red"
        android:paddingStart="32dp"
        android:paddingBottom="8dp" />

</LinearLayout>
